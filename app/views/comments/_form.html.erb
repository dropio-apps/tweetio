<% form_for :comment,@comment,:url=>'/comments/insert' do |f| %>
<div class="post_middle_comments">Comments :</div>
  <div class="post_middle_comments_subtextbox">
    <% if !flash[:notice].blank? %>
      <h1><b style="color:red;"><%=flash[:notice]%></b></h1>
    <% end %>
   <h1><%= f.text_area :comments, :rows => '1', :cols => '40' %></h1></div>
  <div class="post_middle_comments_subtextbox_postimage">
    <%= f.hidden_field :upload_file_id, :value => upload_file.id %>
    <%= f.hidden_field :users_id, :value => current_user.id %>
    <%= image_submit_tag "/images/post_button.png" %>    
  </div>
<% end %>